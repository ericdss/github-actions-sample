{
  "compilerOptions": {
    "target": "ES2017",                                 
    "lib": ["es6"],                                     
    "module": "commonjs",
    "types": [
      "node"
    ],                        
    "rootDir": "./src",                                   
    "resolveJsonModule": true,                          
    "allowJs": true,                                    
    "outDir": "build",                                  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "noImplicitAny": true,                              
    "skipLibCheck": true,                               
  },
  "include": ["src/**/*"],                      
  "exclude": ["node_modules"]
}
